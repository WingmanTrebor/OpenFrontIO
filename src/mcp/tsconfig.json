{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Override root config for Node.js execution
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    // Node-specific settings
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    // Strict type checking
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    // Skip lib check for faster compilation
    "skipLibCheck": true,
    // Allow importing from parent directories
    "baseUrl": ".",
    "paths": {
      "@core/*": ["../core/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
