{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "../..",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "../..",
    "paths": {
      "resources/*": ["resources/*"]
    },
    "types": ["node"]
  },
  "include": [
    "index.ts",
    "GameStateCache.ts",
    "McpServer.ts",
    "WebSocketServer.ts",
    "schema.ts"
  ],
  "exclude": [
    "../../src/client",
    "../../src/core/worker/WorkerClient.ts",
    "../../src/core/worker/Worker.worker.ts",
    "node_modules"
  ]
}
