{
  "name": "openfront-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for LLM control of OpenFront single-player games",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "esbuild index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --packages=external --alias:resources=../../resources --loader:.json=json",
    "start": "node dist/index.js",
    "dev": "tsx index.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "ws": "^8.18.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.11",
    "esbuild": "^0.27.2",
    "tsx": "^4.17.0",
    "typescript": "^5.7.2"
  }
}
